{
    "manifest_version": 2,
    "name": "YouTube Speed Setter/Observer",
    "version": "0.1",
    "description": "Management of Youtube videos speed configuration, regarding specific channels.",
    "background": {
        "persistent": true,
        "scripts": ["js/background.js"]
    },
    "page_action": {
        "default_icon" : "icon-19.png",
        "default_title" : "There's a '1Youtube' in this URL!",
        "default_popup": "simple-grid/examples/popup.html"
    },
    "permissions" : [
        "declarativeContent",
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["js/myScript.js"]
        }
        
    ]
}